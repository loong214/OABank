<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/view_background"
    android:padding="15dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/project_list_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="估"
            android:textSize="14sp"
            android:textColor="@color/text_highlight"/>
        <TextView
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/text_desc"/>
        <TextView
            android:id="@+id/project_list_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLength="14"
            android:text="测试银行测试银行测试银行测试银行测试银行测试银行测试银行测试银行"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/project_list_client"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="长沙银行四方坪支行"
            android:textColor="@color/text_primary"/>
        <TextView
            android:id="@+id/project_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="100万"
            android:textColor="@color/text_warn"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/project_list_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="房抵快贷"
            android:textColor="@color/text_desc"/>
        <TextView
            android:id="@+id/project_list_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="李四"
            android:textColor="@color/text_desc"/>
        <TextView
            android:id="@+id/project_list_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="10月10日 16：54"
            android:textColor="@color/text_desc"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>
