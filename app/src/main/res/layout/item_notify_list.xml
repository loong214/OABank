<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/view_background"
    android:padding="15dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/notify_list_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLength="14"
            android:text="测试银行测试银行测试银行测试银行测试银行测试银行测试银行测试银行"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/notify_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-03 16:50"
            android:textColor="@color/text_desc"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/notify_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="尚湖花园尚湖花园尚湖花园尚湖花园尚湖花园尚湖花园尚湖花园尚湖花园尚湖花园"
        android:textSize="12sp"
        android:textColor="@color/text_desc"
        />

</LinearLayout>
